<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0"
            prefWidth="700.0" stylesheets="@stylesheet.css"  styleClass="root" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bakeacake.bakeacaketest.controller.LoginController">
    <children>
        <GridPane alignment="CENTER" hgap="10" layoutX="214.0" layoutY="301.0" vgap="10"
                  xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
            <children>
                <Text fill="#186565" style="-fx-font-size: 18px" text="Welcome to Bake a Cake" GridPane.columnIndex="0"
                      GridPane.columnSpan="2" GridPane.rowIndex="0"/>
                <Label text="Enter your user name" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Enter your password" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Button onAction="#handleLoadRegister"
                        style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #444F4F" text="Register"
                        GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <Button fx:id="logInButton" onAction="#handleUserLogin"
                        style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #444F4F" text="Login"
                        GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Button mnemonicParsing="false" onAction="#resetPassword" prefHeight="9.0" prefWidth="119.0"
                        text="Forgot password?" GridPane.rowIndex="4"/>
            </children>
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>


        </GridPane>
    </children>
</AnchorPane>
