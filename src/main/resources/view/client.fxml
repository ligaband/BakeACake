<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane alignment="CENTER" hgap="10" style="-fx-background-color:#899494" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bakeacake.bakeacaketest.controller.ClientController">

        <Text text="Enter clients data" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

        <Label text="Full Name" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Phone number" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Address" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Button onAction="#handleAddNewClient" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #444F4F" text="Add client" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <Button onAction="#handleReturn" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #444F4F" text="Return" GridPane.columnIndex="1" GridPane.rowIndex="4" />

</GridPane>
