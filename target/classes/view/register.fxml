<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<GridPane alignment="CENTER" hgap="10" style="-fx-background-color:#899494" vgap="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bakeacake.bakeacaketest.controller.RegisterController">
   <children>
       <Text text="Create an account" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
   
       <Label text="Full Name" GridPane.columnIndex="0" GridPane.rowIndex="1" />
       <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   
       <Label text="Username" GridPane.columnIndex="0" GridPane.rowIndex="2" />
       <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   
       <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="3" />
       <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   
       <Label text="Confirm Password" GridPane.columnIndex="0" GridPane.rowIndex="4" />
       <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
   
       <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="5" />
       <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
   
       <Button onAction="#handleRegistration" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #444F4F" text="Register" GridPane.columnIndex="0" GridPane.rowIndex="8" />
       <Button onAction="#handleCancelRegister" style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #444F4F" text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="8" />
   
       <Label fx:id="notificationLabel" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="9" />
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
