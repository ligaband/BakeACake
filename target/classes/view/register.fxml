<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane fx:id="anchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="700.0" prefWidth="700.0"  stylesheets="@stylesheet.css" styleClass="root"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bakeacake.bakeacaketest.controller.RegisterController">
    <children>
        <GridPane alignment="CENTER" hgap="10" layoutX="210.0" layoutY="258.0" vgap="10"
                  xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
            <children>
                <Text text="Create an account" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0"/>

                <Label text="Full Name" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Username" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Confirm Password" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <Label text="Secret question" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <ComboBox fx:id="secretQuestionBox" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                <Label text="Answer" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                <TextField fx:id="answerField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

                <Button onAction="#handleRegistration"
                        style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #444F4F" text="Register"
                        GridPane.columnIndex="0" GridPane.rowIndex="8"/>
                <Button onAction="#handleCancelRegister"
                        style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #444F4F" text="Cancel"
                        GridPane.columnIndex="1" GridPane.rowIndex="8"/>

                <Button mnemonicParsing="false" onAction="#handleLogin" prefHeight="25.0" prefWidth="72.0" text="Log in"
                        GridPane.columnIndex="2" GridPane.rowIndex="8"/>
            </children>
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
                <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>
        </GridPane>
    </children>
</AnchorPane>
