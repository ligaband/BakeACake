<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.scene.text.Text?>
<GridPane fx:controller="com.bakeacake.bakeacaketest.controller.PasswordController" xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER"
          hgap="10" vgap="10" style="-fx-background-color:#899494">
    <Text text="Change password" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

    <Label text="New password" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <PasswordField fx:id="newPasswordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>


    <Button text="Confirm" GridPane.rowIndex="8" GridPane.columnIndex="0" onAction="#changePassword"
            style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #444F4F"/>
    <Button text="Return" GridPane.rowIndex="8" GridPane.columnIndex="1" onAction="#returnHome"
            style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #444F4F"/>

    <Label fx:id="notificationLabel" GridPane.rowIndex="9" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
</GridPane>

